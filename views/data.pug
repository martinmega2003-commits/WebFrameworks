extends layout
include includes/cart

block content
  style.
    body {
      background-color: #f8f9fa;
    }
    .remove-btn {
      color: #dc3545;
      cursor: pointer;
      font-weight: bold;
    }
    .remove-btn:hover {
      color: #a71d2a;
    }

  main.container.py-5
    header.text-center.mb-5
      h1.display-4.fw-bold.text-primary MEGA workout
    section(aria-label='Seznam aktivit')
      h2.mb-4.text-secondary History
      .list-group
        .list-group-item.d-flex.justify-content-between.align-items-center
          .flex-grow-1
            h5.mb-1 Gym
            small.text-muted Doba trvání: 90 min
          span.badge.bg-warning.text-dark.me-3 4/10
        .list-group-item.d-flex.justify-content-between.align-items-center
          .flex-grow-1
            h5.mb-1 Walking
            small.text-muted Doba trvání: 24 min
          span.badge.bg-success.text-light.me-3 7/10
